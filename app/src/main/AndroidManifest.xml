<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ulman.converter"
    android:versionCode="1"
    android:versionName="@string/version_summary">


    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/binary2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ulman.converter.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ulman.converter.Settings"
            android:label="@string/action_settings"
            android:parentActivityName="com.ulman.converter.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ulman.converter.MainActivity" />
        </activity>
        <activity
            android:name="com.ulman.converter.MailForDeveloper"
            android:label="@string/message"
            android:parentActivityName="com.ulman.converter.Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ulman.converter.MainActivity" />
        </activity>
    </application>

</manifest>
